<div class="main-content">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 main-column">
        <div class="container">
          <div class="row main-row">
            <div class="main-header">Change your password</div>
          </div>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= f.hidden_field :reset_password_token %>
            <div class="row">
              <div class="col-12">
                <%= render "devise/shared/error_messages", resource: resource %>
              </div>
              <div class="col-12 chore-padding-8">
                <%= f.label :password, "New password" %><br />
                <%= f.password_field(:password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-lg") %>
              </div>
              <div class="col-12 chore-padding-8">
                <%= f.label :password_confirmation, "Confirm new password" %><br />
                <%= f.password_field(:password_confirmation, autocomplete: "off", class: "form-control form-control-lg") %>
              </div>
              <div class="col-12 chore-padding-8">
                <%= f.submit("Change", class: "btn btn-primary btn-lg") %>
              </div>
            </div>
          <% end %>
          <div class="col-12 chore-padding-8 text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
