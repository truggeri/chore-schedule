<% provide(:title, "Chores") %>

<% unless @chore&.valid? %>
  <%= render(partial: "shared/error_messages", locals: { model: @chore }) %>
<% end %>

<div class="flex row-padded">
  <div class="half">
    <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#createChoreModal">
      <%= fa_icon("plus-circle") %> Create
    </button>
  </div>
  <div class="half text-right">
    <div class="">
      <button class="button" id="sortMenuButton">
        <%= chore_sort_icon(@order) %> <%= chore_sort_by_name(@sort) %>
      </button>
    </div>
  </div>
</div>

<%= render(partial: "chores/listing", locals: { chores: @chores }) %>

<%= render(partial: "shared/generic_modal", locals: { action: "create", model: "chore" }) %>
<%= render("remove_confirm_modal") %>