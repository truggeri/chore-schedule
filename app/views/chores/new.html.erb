<h1>Create a new chore</h1>

<div class="col-md-6">
  <%= form_for @chore, url: { action: "create" } do |f| %>
    <div class="form-group">
      <%= label(:chore, :description) %>
      <%= f.text_field(:description, class: "form-control") %>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= label(:chore, :frequency) %>
        <%= f.text_field(:frequency, class: "form-control") %>
      </div>
      <div class="form-group col-md-6 align-bottom">
        <%= f.select(:frequency_type, Chore.frequency_types, class: "form-control") %>
      </div>
      <small class="form-text text-muted">How often is this chore performed?</small>
    </div>
    <br />
    <%= submit_tag("Create", class: "btn btn-primary") %>&nbsp;&nbsp;&nbsp;
    <button type="button" class="btn btn-secondary" onclick="window.location.href = '<%= chores_url %>';">Cancel</button>
<% end %>
</div>