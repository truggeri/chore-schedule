<h1>Categories</h1>

<button type="button" class="btn create-button" data-toggle="modal" data-target="#createCategoryModal">
  <i class="fa fa-plus-circle"></i> Create
</button>

<% if @categories.present? %>
  <table class="table">
    <thead class="" >
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Chores</th>
      <th scope="col">&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category_color_badge(category) %><%= link_to(category.name, category_path(category)) %></td>
        <td><%= category.chore_count %></td>
        <td><button type="button" class="btn delete-button" data-toggle="modal" data-target="#removeConfirmModal"
                    onclick="adjust_delete_path('<%= category_path(category) %>', '<%= category.name %>');">
          <i class="fa fa-trash"></i>
        </button>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<%= render("create_modal") %>
<%= render("remove_confirm_modal") %>