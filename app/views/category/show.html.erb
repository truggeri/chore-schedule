<% provide(:title, @category&.name || "Category") %>

<div class="flex chore-padding-16">
  <div class="half text-left">
    <%= link_to(safe_join([fa_icon("arrow-circle-left"), " All Categories"]), category_index_path) %>
  </div>
  <div class="half text-right">
    <%= category_badge_with_count(@category, "#{@chores.size} chores") %>
  </div>
</div>
<div class="flex chore-padding-16">
  <div class="two-third half-800 chore-padding-8">
    <h5>Chores</h5>
  </div>
  <div class="third create-chore-button">
    <label for="create-chore-modal" class="button">
      <%= fa_icon("plus-circle") %> Create Chore
    </label>
  </div>
  <div class="full">
    <%= chore_summary_columns(@chores) %>
  </div>
</div>

<%= render("shared/generic_modal", action: "create", model: "chore", form: render("chores/form")) %>
